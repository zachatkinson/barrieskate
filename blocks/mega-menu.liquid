{% stylesheet %}

{% endstylesheet %}

{% comment %} [START block.markup] {% endcomment %}
<div
        class="{{ block.settings | class_list }} text-block {{ block.settings.text_style }} text-{{ block.settings.alignment }}"
        {{ block.shopify_attributes }}
>
    {{ block.settings.select }}
</div>
{% comment %} [END block.markup] {% endcomment %}

{% comment %} [START block.preset] {% endcomment %}
{% schema %}
{
"name": "Mega Menu",
"tag": null,
"settings": [
{
"type": "select",
"id": "text_style",
"label": "Menu",
"options": [
{
"value": "",
"label": "Body"
},
{
"value": "text-block-subtitle",
"label": "Subtitle"
},
{
"value": "text-block-caption",
"label": "Caption"
}
],
"default": ""
},
{
"type": "select",
"id": "alignment",
"label": "Alignment",
"options": [
{
"value": "start",
"label": "Left"
},
{
"value": "center",
"label": "Center"
},
{
"value": "end",
"label": "Right"
}
],
"default": "start"
},
{
"type": "style.size_panel",
"id": "size",
"label": "Size",
"default": {
"width": "auto",

"@media (--mobile)": {
"width": "100%"
}
}
},
{
"type": "style.spacing_panel",
"id": "spacing",
"label": "Spacing"
}
],
"presets": [
{ "name": "Text" },
{
"name": "Heading",
"settings": {
"text": "<h2>Heading<\/h2>"
    }
    }
    ]
    }
    {% endschema %}
    {% comment %} [END block.preset {% endcomment %}
